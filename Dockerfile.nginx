FROM nginx:alpine

# Copy nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

# Copy SSL certificates from certs folder
COPY certs/ramus-stock.life.pem /etc/ssl/certs/ramus-stock.life.pem
COPY certs/ramus-stock.life.key.pem /etc/ssl/private/ramus-stock.life.key.pem
COPY certs/origin_ca_rsa_root.pem /etc/ssl/certs/origin_ca_rsa_root.pem

# Create directory for static files (will be served by frontend service)
RUN mkdir -p /var/www/html

# Expose ports
EXPOSE 80
EXPOSE 443

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost/health || exit 1

# Start nginx
CMD ["nginx", "-g", "daemon off;"]